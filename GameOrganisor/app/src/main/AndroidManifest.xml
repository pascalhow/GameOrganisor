<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pascalhow.gameorganisor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- This makes sure the activity (ListView) is not re-created when orientation changes -->
        <!-- android:configChanges="orientation|screenSize|keyboardHidden" -->
        <!-- This disables keyboard from being selected on startup -->
        <!-- android:windowSoftInputMode="stateVisible|adjustPan|stateAlwaysHidden" -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateVisible|adjustPan|stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameSession"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_game_session" >
        </activity>
        <activity
            android:name=".GameResult"
            android:label="@string/title_activity_current_game">
        </activity>
    </application>

</manifest>
